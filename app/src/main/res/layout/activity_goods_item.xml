<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_goods_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yizu.GoodsItemActivity">
    <com.dalong.carrousellayout.CarrouselLayout
        android:id="@+id/itemPic"
        app:rotateDirection="anticlockwise"
        app:r="200dp"
        app:rotationTime="3000"
        android:gravity="center"
        android:layout_width="400dp"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/p1"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <ImageView
            android:id="@+id/p2"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <ImageView
            android:id="@+id/p3"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </com.dalong.carrousellayout.CarrouselLayout>
    <ImageView
        android:id="@+id/goodsBack"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back1"/>
    <View
        android:id="@+id/SLine"
        android:layout_below="@+id/itemPic"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>
    <TextView
    android:layout_marginLeft="20dp"
    android:textColor="#000000"
    android:textSize="16dp"
    android:layout_below="@+id/SLine"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/itemName1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="物品名称："/>
    <TextView
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/SLine"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/itemName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below="@+id/itemName1"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/itemClassification1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/itemName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品分类："/>
    <TextView
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/itemName1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/itemClassification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below= "@+id/itemClassification1"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/itemState1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/itemClassification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品状态："/>
    <TextView
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/itemClassification1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/itemState2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below= "@+id/itemState1"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>

    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/totalRentMoney"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemState1"
        android:text="总租用金额："/>
    <TextView
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/itemState1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/itemtotalRentMoney2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below= "@+id/totalRentMoney"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/totalRentTimes"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalRentMoney"
        android:text="总租用次数："/>
    <TextView
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/totalRentMoney"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/itemtotalRentTimes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below= "@+id/totalRentTimes"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/detail"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalRentTimes"
        android:text="详细介绍："/>
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
        android:layout_below="@+id/detail"
        android:id="@+id/itemdetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below= "@+id/itemdetail2"
        android:background="#e0e0e0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"></View>
    <com.example.yizu.tool.FloatingMusicMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        app:fmm_button_interval="8dp"
        app:fmm_cover="@drawable/more1"
        app:fmm_backgroundTint="@color/white"
        app:fmm_floating_direction="left">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/holdon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/on"
                app:backgroundTint="@color/white"
                app:rippleColor="@color/white"
                app:fabSize="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="继续放租"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/down"
                app:backgroundTint="@color/white"
                app:rippleColor="@color/white"
                app:fabSize="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="下架商品"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </com.example.yizu.tool.FloatingMusicMenu>

</RelativeLayout>
