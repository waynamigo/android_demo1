<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="YI租平台规定双方协定的损耗率一般在0%到20%\n如果严重损坏请申请平台进行仲裁"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/title_message_lose"
        android:text="请输入协商后的损耗率(只填数字即可)："
        android:gravity="left|center"
        android:background="@drawable/linearlayout_line"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <EditText
        android:id="@+id/edit_message_lose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/linearlayout_line"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/confirm_lose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="@drawable/linearlayout_line"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tip"
        android:gravity="left"
        android:textSize="10sp"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
