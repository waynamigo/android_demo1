<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yizu.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <RelativeLayout
        android:id="@+id/content_main"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/list1"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/ic1"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/skill"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/skill" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="工具"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/ic1"
                android:id="@+id/ic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/electronic"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/electronic" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/electronic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="数码"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/ic2"
                android:id="@+id/ic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/home"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/home1" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="家居"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/ic3"
                android:id="@+id/ic4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/study"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/study2" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="学习"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="17dp"
                android:layout_marginLeft="27dp"
                android:layout_below="@+id/ic1"
                android:id="@+id/ic5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/clothes"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/clothes1" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/clothes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="服饰"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_below="@+id/ic2"
                android:layout_toRightOf="@+id/ic5"
                android:id="@+id/ic6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/transportation"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transportation1" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/transportation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="交通"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_below="@+id/ic2"
                android:layout_toRightOf="@+id/ic6"
                android:id="@+id/ic7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/place"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/place" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="场地"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_below="@+id/ic2"
                android:layout_toRightOf="@+id/ic7"
                android:id="@+id/ic8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/service"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/service" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_below="@id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="服务"/>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/list1"
            android:background="#e0e0e0"
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:id="@+id/rec"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:layout_below="@id/line"
            android:text="YI租好货 实时为您推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/li"
            android:layout_below="@+id/rec"
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_below="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/allrecommend"></include>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>