<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/userToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <FrameLayout
        android:paddingTop="20dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.example.yizu.control.WaveView
            android:id="@+id/wave"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:id="@+id/userimage"
            android:layout_gravity="center|bottom"
            android:src="@drawable/logo2"
            android:gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userimage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ll_bg_d"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/goName"
            android:onClick="onClick"
            android:clickable="true">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/game"
                android:textColor="#222222"
                android:textSize="18dp"
                android:text="用户昵称：" />

            <TextView
                android:text="YIZu用户"
                android:id="@+id/name"
                android:textSize="18dp"
                android:textColor="#222222"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/goin" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/devide_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/goGender"
            android:onClick="onClick"
            android:clickable="true">



            <TextView
                android:id="@+id/gender1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="#222222"
                android:text="性        别：" />
            <TextView
                android:text="男"
                android:id="@+id/gender"
                android:textSize="18dp"
                android:textColor="#222222"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/gender1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/goin" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/devide_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/mobile"
            android:onClick="onClick"
            android:clickable="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/game"
                android:textSize="18dp"
                android:textColor="#222222"
                android:text="绑定手机：" />

            <TextView
                android:id="@+id/phoneNum"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView5"
                android:text="17806256122"
                android:textSize="18dp"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/devide_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/jifen"
            android:onClick="onClick"
            android:clickable="true">

            <TextView
                android:id="@+id/jifen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/game"
                android:textSize="18dp"
                android:textColor="#222222"
                android:text="用户积分：" />

            <TextView
                android:id="@+id/grade"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/jifen1"
                android:text="0"
                android:textSize="18dp"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>






    <Button
        android:id="@+id/exit_user_message"
        android:text="退出当前登录"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#5fb7ef"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>


