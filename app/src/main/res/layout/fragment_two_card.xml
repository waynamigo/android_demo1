<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragmentCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/linearlayout_line">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="租用方:"
            android:id="@+id/rentedPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp"
            android:textSize="10dp"/>

        <TextView
          android:text="评分："
            android:layout_marginLeft="180dp"
            android:id="@+id/starRating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#dcf41e0a"
            android:textSize="10dp"/>
        <View
            android:layout_below="@+id/starRating2"
            android:background="#e0e0e0"
            android:layout_width="wrap_content"
            android:layout_height="1dp"></View>
        <TextView
            android:text="用户体验："
            android:layout_marginTop="10dp"
            android:id="@+id/textEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/starRating2"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/evaluationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEvaluation"
            android:textColor="#bcb8b8"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="280dp"
            android:text="2017.06.01"
            android:textSize="10dp"/>

    </RelativeLayout>

</LinearLayout>